// Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("driver") // "driver" or "admin"
  phone         String?
  address       String?
  createdAt     DateTime  @default(now())

  accounts    Account[]
  sessions    Session[]
  Vehicle     Vehicle[]
  Reservation Reservation[]
  
  // For admin role
  ParkingHouse ParkingHouse[]
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Driver {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  phone     String
  address   String
  createdAt DateTime @default(now())

  Vehicle     Vehicle[]
  Reservation Reservation[]
}

model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  ParkingHouse ParkingHouse[]
}

model ParkingHouse {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  admin     Admin?   @relation(fields: [adminId], references: [id])
  adminId   String?  @db.ObjectId
  address   String
  price     Int
  createdAt DateTime @default(now())

  ParkingSlot ParkingSlot[]
}

model ParkingSlot {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  parkHouse   ParkingHouse @relation(fields: [parkHouseId], references: [id])
  parkHouseId String       @db.ObjectId
  address     String
  createdAt   DateTime     @default(now())

  Reservation Reservation[]
}

model Vehicle {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  driver    Driver?  @relation(fields: [driverId], references: [id])
  driverId  String?  @db.ObjectId
  SPZ       String
  type      String
  createdAt DateTime @default(now())
}

model Reservation {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  user       User        @relation(fields: [userId], references: [id])
  userId     String      @db.ObjectId
  driver     Driver?     @relation(fields: [driverId], references: [id])
  driverId   String?     @db.ObjectId
  parkSlot   ParkingSlot @relation(fields: [parkSlotId], references: [id])
  parkSlotId String      @db.ObjectId
  start      DateTime
  end        DateTime
  createdAt  DateTime    @default(now())
}
