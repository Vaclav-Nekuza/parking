// Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models - using polymorphic relationships
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  userType          String? // "driver" or "admin" - optional for backward compatibility
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  // Polymorphic relations
  driver Driver? @relation(fields: [userId], references: [id], onDelete: Cascade)
  admin  Admin?  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId, userType])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  userType     String?  // "driver" or "admin" - optional for backward compatibility
  expires      DateTime

  // Polymorphic relations
  driver Driver? @relation(fields: [userId], references: [id], onDelete: Cascade)
  admin  Admin?  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, userType])
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Driver {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  phone         String?
  address       String?
  createdAt     DateTime  @default(now())

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // Driver-specific relations
  Vehicle     Vehicle[]
  Reservation Reservation[]
}

model Admin {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  createdAt     DateTime  @default(now())

  // NextAuth relations
  accounts Account[]
  sessions Session[]

  // Admin-specific relations
  ParkingHouse ParkingHouse[]
}

model ParkingHouse {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  admin     Admin    @relation(fields: [adminId], references: [id])
  adminId   String   @db.ObjectId
  address   String
  price     Int
  createdAt DateTime @default(now())

  ParkingSlot ParkingSlot[]
}

model ParkingSlot {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  parkHouse   ParkingHouse @relation(fields: [parkHouseId], references: [id])
  parkHouseId String       @db.ObjectId
  address     String
  createdAt   DateTime     @default(now())

  Reservation Reservation[]
}

model Vehicle {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  driver    Driver   @relation(fields: [driverId], references: [id])
  driverId  String   @db.ObjectId
  SPZ       String
  type      String
  createdAt DateTime @default(now())
}

model Reservation {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  driver     Driver      @relation(fields: [driverId], references: [id])
  driverId   String      @db.ObjectId
  parkSlot   ParkingSlot @relation(fields: [parkSlotId], references: [id])
  parkSlotId String      @db.ObjectId
  start      DateTime
  end        DateTime
  createdAt  DateTime    @default(now())
}
