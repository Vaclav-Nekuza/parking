// Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Driver {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  name          String
  phone         String?   // Made optional for OAuth users
  address       String?   // Made optional for OAuth users
  
  // OAuth fields
  emailVerified DateTime?
  image         String?
  googleId      String?   @unique
  
  createdAt     DateTime  @default(now())

  Vehicle       Vehicle[]
  Reservation   Reservation[]
  Session       Session[]
}

model Admin {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  name          String
  
  // OAuth fields  
  emailVerified DateTime?
  image         String?
  googleId      String?   @unique
  
  createdAt     DateTime  @default(now())

  ParkingHouse  ParkingHouse[]
  Session       Session[]
}

model ParkingHouse {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  admin     Admin    @relation(fields: [adminId], references: [id])
  adminId   String   @db.ObjectId
  address   String
  price     Int
  createdAt DateTime @default(now())

  ParkingSlot ParkingSlot[]
}

model ParkingSlot {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  parkHouse   ParkingHouse @relation(fields: [parkHouseId], references: [id])
  parkHouseId String       @db.ObjectId
  address     String
  createdAt   DateTime     @default(now())

  Reservation Reservation[]
}

model Vehicle {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  driver    Driver   @relation(fields: [driverId], references: [id])
  driverId  String   @db.ObjectId
  SPZ       String
  type      String
  createdAt DateTime @default(now())
}

model Reservation {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  driver     Driver      @relation(fields: [driverId], references: [id])
  driverId   String      @db.ObjectId
  parkSlot   ParkingSlot @relation(fields: [parkSlotId], references: [id])
  parkSlotId String      @db.ObjectId
  start      DateTime
  end        DateTime
  createdAt  DateTime    @default(now())
}

// Simple session model that can relate to either Driver or Admin
model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userType     String   // 'driver' or 'admin'
  driverId     String?  @db.ObjectId
  adminId      String?  @db.ObjectId
  isActive     Boolean  @default(true)
  expires      DateTime
  createdAt    DateTime @default(now())
  
  // Relations - only one will be populated based on userType
  driver Driver? @relation(fields: [driverId], references: [id], onDelete: Cascade)
  admin  Admin?  @relation(fields: [adminId], references: [id], onDelete: Cascade)
}
